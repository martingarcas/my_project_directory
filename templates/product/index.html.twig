{# templates/product/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Create Product{% endblock %}

{% block body %}
    <h1>Create New Product</h1>

    {# Mostrar errores si existen #}
    {% if errors is defined and errors|length > 0 %}
        <ul>
            {% for error in errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    {# Mostrar el formulario de creaci√≥n de producto #}
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.price) }}
        {{ form_row(form.description) }}
        {{ form_row(form.prueba) }}
        {{ form_row(form.save) }}
    {{ form_end(form) }}

{% endblock %}
