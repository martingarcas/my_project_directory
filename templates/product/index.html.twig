{% extends 'base.html.twig' %}

{% block title %}Detalles del Producto{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Resultado de la creaci√≥n del producto</h1>

    {# Si hay errores, los mostramos #}
    {% if errors is defined and errors|length > 0 %}
        <h3>Se encontraron los siguientes errores:</h3>
        <ul>
            {% for error in errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    {% else %}
        {# Si no hay errores, mostramos el producto creado #}
        <h3>Producto creado exitosamente:</h3>
        <p><strong>Nombre:</strong> {{ product.name }}</p>
        <p><strong>Precio:</strong> {{ product.price }}</p>
        <p><strong>Descripcion:</strong> {{ product.description }}</p>
        <p><strong>Prueba:</strong> {{ product.prueba }}</p>
        <p><strong>ID:</strong> {{ product.id }}</p>
    {% endif %}
</div>

{% endblock %}
